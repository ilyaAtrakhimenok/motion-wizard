{
	"extends": "@tsconfig/react-native/tsconfig.json",
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@assets/*": ["assets/*"],
			"@components/*": ["src/components/*"],
			"@screens/*": ["src/screens/*"],
			"@navigation/*": ["src/navigation/*"],
			"@hooks/*": ["src/hooks/*"],
			"@ui/*": ["src/ui/*"],
			"@theme/*": ["src/theme/*"]
		},
		"skipLibCheck": true,
		"resolveJsonModule": true
	},
	"include": ["./src", "App.tsx"],
	"exclude": ["src/node_modules", "node_modules", "/node_modules", "./src/node_modules"],
	"types": ["@types/react-native"]
}
